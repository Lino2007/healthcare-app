@model HealthcareApp.Models.DataModels.PatientAdmission

<div>
    <h4>PatientAdmission</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdmissionDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdmissionDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsUrgent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsUrgent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.Firstname)
        </dd>
